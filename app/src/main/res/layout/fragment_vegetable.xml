                        android:layout_width="139dp"
                        android:layout_height="124dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/veg1" />

                    <TextView
                        android:id="@+id/vegiName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/vegiImage1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Green Beans"
                        android:textSize="16sp"
                        android:textColor="@color/green"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/vegiPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/vegiName1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="RS.178.00"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/addToCartvegiButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/vegiPrice1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
